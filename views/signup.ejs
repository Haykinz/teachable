<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> <%=_('Signup')%></h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label><%=_('Email')%></label>
            <input type="email" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label><%=_('Name')%></label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="form-group">
            <label><%=_('Password')%></label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg"><%=_('Signup')%></button>
    </form>

    <hr>

    <p><%=_('Already have an account?')%> <a href="/login"><%=_('Login')%></a></p>
    <p><%=_('Or prefer one of these?')%></p>
    <p>
        <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> <%=_('Facebook')%></a>
        <a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> <%=_('Twitter')%></a>
        <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> <%=_('Google+')%></a>
    </p>


<%- contentFor('style') %>

