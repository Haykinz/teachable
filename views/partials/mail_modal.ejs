
<div class="modal fade" id="<%-mail_modal_id%>" tabindex="-1" role="dialog" aria-labelledby="<%-mail_modal_id%>_label" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="width: 900px;">
        <form class="form-horizontal" action="/sendmail" method="POST">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="<%-mail_modal_id%>_label"><%- mail_modal_title %></h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="<%-mail_modal_id%>_subject" class="col-sm-2 control-label">Subject</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="<%-mail_modal_id%>_subject" placeholder="Subject" name="subject">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="<%-mail_modal_id%>_carboncopy" class="col-sm-2 control-label">CC</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control user-input" id="<%-mail_modal_id%>_carboncopy" placeholder="Enter CC" name="cc">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="well well-sm">
                        <textarea id="<%-mail_modal_id%>_text" class="panel-body" name="test" placeholder="Enter Mail Text here..." style="width: 100%; height: 200px; font-size: 14px; line-height: 18px;"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div><!-- /.modal-content -->
        </form>
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
