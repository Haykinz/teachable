
<div class="modal fade" id="<%-modal_course_dialog_id%>" tabindex="-1" role="dialog" aria-labelledby="<%-modal_course_dialog_id%>_label" aria-hidden="true">
    <div class="modal-dialog">
        <form class="form-horizontal" action="/courses" method="POST">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="<%-modal_course_dialog_id%>_label"><%-modal_course_dialog_title%></h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="<%-modal_course_dialog_id%>_name" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="<%-modal_course_dialog_id%>_name" placeholder="Name" name="name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="<%-modal_course_dialog_id%>_date" class="col-sm-2 control-label">Start</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="<%-modal_course_dialog_id%>_date" placeholder="Start Date" name="date">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="<%-modal_course_dialog_id%>_teacher" class="col-sm-2 control-label">Teachers</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control user-input" id="<%-modal_course_dialog_id%>_teacher" placeholder="Enter Teachers" name="teachers">
                        </div>
                    </div>

                    <div class="panel panel-default">
                        <div class="panel-heading clearfix">
                            <div class="panel-title pull-left" style="padding-top: 0.4em;">
                                Participants
                            </div>
                            <div class="btn-group pull-right">
                                <button class="btn btn-default"><span class="fa fa-plus"></span></button>
                            </div>
                        </div>

                        <table class="table table-striped">
                            <thead> 
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary"><%-modal_course_dialog_submit_label%></button>
                </div>
            </div><!-- /.modal-content -->
        </form>
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
